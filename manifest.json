{
  "manifest_version": 3,
  "name": "LLM Website Translator",
  "version": "2.2",
  "description": "A Chrome extension that uses LLM's API to translate websites.",
  "permissions": [ "storage", "activeTab", "contextMenus" ],
  "host_permissions": [ "<all_urls>" ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "css": [ "content.css" ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "128": "images/icon128.png"
  }
}
